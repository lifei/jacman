article
  .article-content
    p
      line-height 1.5
      margin-top 0.5em
      margin-bottom 0.5em
    ol, ul
      padding-top 0.2em
      padding-bottom 0.2em
    ol.loweralpha > li
        list-style-type lower-alpha
    ul > li
      list-style-type square

    td.icon
      border-right: 1px #CCC dashed;
      div.title
        color: white;
      [class^="fa icon-"]
        display inline-block
        font normal normal normal 14px/1 FontAwesome
        text-rendering auto
        color: #19407c
        font-size 2.5em
        text-shadow 1px 1px 2px rgba(0,0,0,.5)
        cursor default
      .icon-note:before
        content: "\f05a"
        color: #19407c
      .icon-tip:before
        content: "\f0eb"
        text-shadow: 1px 1px 2px rgba(155, 155, 0, 0.8)
        color: #111
      .icon-warning:before
        content: "\f071"
        color: #bf6900
     .icon-caution:before
        content: "\f06d"
        color: #bf3400
     .icon-important:before
        content: "\f06a"
        color: #bf0000
