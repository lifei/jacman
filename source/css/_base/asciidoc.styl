article
  .article-content
    p
      line-height 1.5
      margin-top 0.5em
      margin-bottom 0.5em
    ol, ul
      padding-top 0.2em
      padding-bottom 0.2em
    ol.loweralpha > li
        list-style-type lower-alpha
    ul > li
      list-style-type square

    td.icon
      :before
        content "\f05a"
        display inline-block
        font normal normal normal 14px/1 FontAwesome
        text-rendering auto
        color: #19407c
        font-size 2.5em
        text-shadow 1px 1px 2px rgba(0,0,0,.5)
        cursor default
      div.title
        color: white;
